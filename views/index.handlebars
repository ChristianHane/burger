<header>
  <img src="./assets/img/BobsBurgers.png" alt="">

  <h2>Devour That Burger</h2>
</header>

<div class="form-container">
  <span>Add a burger</span>
  <p class="empty-field">Please enter a burger name</p>
  <form class="add-burger">
    <input type="text" id="burger" name="burger" value="" placeholder="Enter the burger you would like to add">
    <input type="submit" id="add-burger">
  </form>
</div>

<div class="container">
  <div id="devoured-container">
    <h3>Burgers that need Devouring:</h3>

    <ul class="undevoured">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-devoured}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="devour-container">
    <h3>Devoured Burgers:</h3>

    <ul class="devoured">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-devoured}}
        {{/if}}
      {{/each}}
    </ul>
  </div> 
</div>




